{
  "functions": {
    "api/app.py": {
      "runtime": "python3.11"
    }
  },
  "builds": [
    { "src": "api/app.py", "use": "@vercel/python" },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.py" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
